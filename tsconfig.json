{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext", "dom"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": false,
		"declaration": true,
		"declarationDir": "dist",
		"declarationMap": false
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}
